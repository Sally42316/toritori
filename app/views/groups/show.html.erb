


      <h2>Group Detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= image_tag @group.get_image, size:"100x100" %></td>
              <td><%= @group.name %></td>
              <td><%= @group.detail %></td>
              <% if @group.owner_id == current_user.id %>
                <td>
                  <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success" %>
                </td>
              <% end %>
            </tr>
        </tbody>
      </table>


