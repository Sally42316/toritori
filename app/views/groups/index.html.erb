<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mb-4">Groups#index</h1>
      <p class="text-center text-muted">Find me in app/views/groups/index.html.erb</p>

      <table class="table table-hover table-bordered">
        <thead class="table-light">
          <tr>
            <th class="text-center">Image</th>
            <th class="text-center">グループ名</th>
            <th class="text-center">紹介文</th>
            <th class="text-center">参加者数</th> <!-- 参加者数列 -->
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td class="text-center">
                <%= image_tag group.get_image, size: "50x50", class: "rounded-circle" %>
              </td>
              <td>
                <%= link_to group.name, group_path(group), class: "text-decoration-none fw-bold" %>
              </td>
              <td><%= group.detail %></td>
              <td class="text-center"><%= group.approved_users_count %></td> <!-- 参加者数を承認されたユーザーのみに変更 -->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
