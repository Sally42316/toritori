<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mb-4">Groups#index</h1>
      <p class="text-center text-muted">Find me in app/views/groups/index.html.erb</p>

      <table class="table table-hover table-bordered">
        <thead class="table-light">
          <tr>
            <th class="text-center">Image</th>
            <th class="text-center">グループ名</th>
            <th class="text-center">紹介文</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td class="text-center">
                <%= image_tag group.get_image, size: "50x50", class: "rounded-circle" %>
              </td>
              <td>
                <%= link_to group.name, group_path(group), class: "text-decoration-none fw-bold" %>
              </td>
              <td><%= group.detail %></td>
              <% if group.owner_id == current_user.id %>
                <td class="text-center">
                  <%= link_to 'Edit', edit_group_path(group), class: "btn btn-sm btn-success" %>
                </td>
              <% else %>
                <td class="text-center text-muted">N/A</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
