<% if @group.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @group.errors.full_messages.each do |message| %>
        <%= message %><br>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center mb-4">Create or Edit Group</h2>

      <%= form_with model: @group, local: true do |f| %>
        <div class="form-group mb-3">
          <%= f.label :グループ名, class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Enter group name' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :紹介文, class: 'form-label' %>
          <%= f.text_area :detail, class: 'form-control', rows: 5, placeholder: 'Write a brief description' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :グループ画像, class: 'form-label' %>
          <%= f.file_field :image, class: 'form-control-file', accept: 'image/*' %>
        </div>

        <div class="form-group text-center">
          <%= f.submit 'Submit', class: 'btn btn-info btn-lg' %>
        </div>
      <% end %>

      <!-- グループ削除ボタン -->
      <div class="form-group text-center mt-4">
        <%= button_to 'Delete Group', group_path(@group), 
            method: :delete, 
            data: { confirm: 'Are you sure you want to delete this group? This action cannot be undone.' }, 
            class: 'btn btn-danger btn-lg' %>
      </div>
    </div>
  </div>
</div>
