<h1 class="text-center mb-4"><%= @group.name %> チャット</h1>

<!-- 戻るボタン -->
<div class="text-center mb-4">
  <%= link_to 'マイグループに戻る', my_groups_groups_path, class: "btn btn-secondary" %>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <!-- チャットメッセージ表示部分 -->
      <div id="chat-box" class="mb-4" style="max-height: 400px; overflow-y: scroll;">
        <% @chats.each do |chat| %>
          <div class="chat-message mb-3" 
               style="display: flex; 
                      justify-content: <%= chat.user == current_user ? 'flex-end' : 'flex-start' %>;
                      align-items: flex-end;">
            
            <div class="chat-bubble p-3 rounded" 
                 style="max-width: 70%; 
                        background-color: <%= chat.user == current_user ? '#dcf8c6' : '#f1f0f0' %>;
                        word-wrap: break-word;
                        border: <%= chat.user == current_user ? 'none' : '2px solid black' %>;">
              
              <% unless chat.user == current_user %>
                <strong><%= chat.user.name %>:</strong>
              <% end %>
              <%= chat.chat %>

              <!-- 位置情報が含まれている場合は地図リンクを表示 -->
              <% if chat.latitude.present? && chat.longitude.present? %>
                <div class="mt-2">
                  <a href="https://www.google.com/maps?q=<%= chat.latitude %>,<%= chat.longitude %>" target="_blank" class="btn btn-info btn-sm">地図で見る</a>
                </div>
              <% end %>

              <!-- 削除ボタン -->
              <% if current_user == chat.user || @group.is_owned_by?(current_user) %>
                <div class="text-right mt-2">
                  <%= link_to '削除', group_chat_path(@group, chat), 
                              method: :delete, 
                              data: { confirm: '本当に削除しますか？' }, 
                              class: 'btn btn-sm btn-danger' %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- メッセージ送信フォーム -->
      <%= form_with model: [@group, @chat], local: true do |form| %>
        <div class="form-group">
          <%= form.text_area :chat, rows: 3, placeholder: "メッセージを入力...", class: "form-control" %>
        </div>

        <!-- 住所入力フィールドを追加 -->
        <div class="form-group">
          <%= form.text_field :address, id: "address", placeholder: "住所を入力", class: "form-control" %> <!-- 住所入力フィールド -->
        </div>

        <!-- 郵便番号フィールドを追加 -->
        <div class="form-group">
          <%= form.text_field :zipcode, id: "zipcode", placeholder: "郵便番号", class: "form-control" %>
        </div>

        <!-- 隠しフィールドで緯度・経度を保存 -->
        <%= form.hidden_field :latitude, id: "latitude" %>
        <%= form.hidden_field :longitude, id: "longitude" %>

        <div class="form-group text-center">
          <%= form.submit "送信", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Google Maps の地図表示用 (位置情報がある場合にのみ表示) -->
<% if @chats.any? { |chat| chat.latitude.present? && chat.longitude.present? } %>
  <div id="map" style="height: 400px; width: 100%;"></div>

  <!-- Google Maps JavaScript API の読み込み -->
  <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['Maps_API_Key'] %>&callback=initMap">
  </script>

  <script>
    // 地図を初期化する関数
    function initMap() {
      var mapOptions = {
        zoom: 12,
        center: { lat: 35.6895, lng: 139.6917 },  // デフォルトの中心座標（東京）
      };
      var map = new google.maps.Map(document.getElementById('map'), mapOptions);

      <% @chats.each do |chat| %>
        <% if chat.latitude.present? && chat.longitude.present? %>
          var marker = new google.maps.Marker({
            position: { lat: <%= chat.latitude %>, lng: <%= chat.longitude %> },
            map: map,
            title: '<%= chat.user.name %>さんの発見場所'
          });
        <% end %>
      <% end %>
    }
  </script>
<% end %>

<!-- jQueryとjpostal.jsの読み込み -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-jpostal-ja@2.14.45/jquery.jpostal.min.js"></script>

<script>
  $(document).ready(function() {
    // 住所入力フォームに対してjpostalを有効化
    $("#address").jpostal({
      postcode: ["#zipcode"], // 郵便番号を自動入力
      address: ["#address"]  // 住所を自動入力
    });

    // 住所が変更されたときに緯度・経度を自動取得
    $("#address").on('change', function() {
      var address = $(this).val();

      // Google Maps Geocoding APIを使って住所から緯度経度を取得
      $.get(`https://maps.googleapis.com/maps/api/geocode/json?address=${address}&key=<%= ENV['Maps_API_Key'] %>`, function(data) {
        if (data.status === "OK") {
          var latitude = data.results[0].geometry.location.lat;
          var longitude = data.results[0].geometry.location.lng;

          // 取得した緯度・経度をフォームの隠しフィールドに設定
          $("#latitude").val(latitude);
          $("#longitude").val(longitude);
        }
      });
    });
  });
</script>
