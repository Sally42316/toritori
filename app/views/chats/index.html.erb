<h1><%= @group.name %> チャット</h1>

<div id="chat-box">
  <% @chats.each do |chat| %>
    <div class="chat-message">
      <strong><%= chat.user.name %>:</strong> <%= chat.chat %>
    </div>
  <% end %>
</div>

<%= form_with model: [@group, @chat], local: true do |form| %>
  <div class="form-group">
    <%= form.text_area :chat, rows: 3, placeholder: "メッセージを入力..." %>
  </div>
  <div class="form-group">
    <%= form.submit "送信", class: "btn btn-primary" %>
  </div>
<% end %>
