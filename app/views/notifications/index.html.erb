<h1 class="text-center mb-4">未読通知</h1>

<% if @notifications.any? %>
  <div class="container">
    <div class="row justify-content-center">
      <% @notifications.each do |notification| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">通知</h5>
              <p class="card-text"><%= notification.message %></p>
              <div class="d-flex justify-content-between">
                <%= link_to '詳細を見る', notification_path(notification), class: 'btn btn-primary btn-sm' %>
                <%= link_to '既読', notification_path(notification), method: :delete, data: { confirm: '本当に既読にしますか？' }, class: 'btn btn-danger btn-sm' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p class="alert alert-info text-center">未読通知はありません。</p>
<% end %>
